<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CosmicExplorer.PlanetInfoPage"
             BackgroundImageSource="space_background.jpg"
             Title="Planet Information">
    <StackLayout Padding="20" Spacing="10">
        <!-- Labels for displaying planet info -->
        <Label Text="Planet Name: "
               x:Name="PlanetName"
               FontSize="20"
               TextColor="Yellow"
               FontFamily="Consolas"
               Margin="10" />
        <Label Text="Discovered by: "
               x:Name="discoveredBy"
               FontSize="18"
               TextColor="Gray"
               Margin="10" />
        <Label Text="Discovered in: "
               x:Name="discoveryDate"
               FontSize="18"
               TextColor="Gray"
               Margin="10" />
        <Label Text="Gravity: "
               x:Name="gravity"
               FontSize="18"
               TextColor="Gray"
               Margin="10" />
        <Label Text="Density: "
              x:Name="density"
              FontSize="18"
              TextColor="Gray"
              Margin="10" />
        <Label Text="Mean Radius: "
              x:Name="meanRadius"
              FontSize="18"
              TextColor="Gray"
              Margin="10" />
    </StackLayout>
</ContentPage>